<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_name"
            android:text="First Match"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/post_image"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/surname"
            android:text="Surname"
            android:layout_below="@+id/post_username"
            android:padding="5dp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/through"
            android:text="Through"
            android:layout_below="@+id/post_age"
            android:padding="5dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m_pesa"
            android:text="M-Pesa"
            android:layout_below="@+id/post_desc"
            android:padding="5dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Bank"
            android:text="Bank"
            android:layout_below="@+id/post_gender"
            android:padding="5dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Acc.No"
            android:id="@+id/account_number"
            android:layout_below="@+id/post_phone"
            android:padding="5dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date"
            android:id="@+id/date"
            android:layout_below="@+id/post_phone"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Amount"
            android:id="@+id/ammount"
            android:layout_below="@+id/post_phone"
            android:padding="5dp"
            tools:ignore="HardcodedText" />


    </LinearLayout>

</android.support.v7.widget.CardView>